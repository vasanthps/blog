<div id="banner_main" class="banner">
  <div class="banner-inner container">
    <h1 class="banner-lead">
      <span id="greeting_text" class="banner-lead-1"></span>
    </h1>
  </div>
  <div style="height:10pc;"></div>
  <h6 id="description_text" class="banner-lead-2"></h6>
  <div class="banner-buttons">
    <a class="button button-primary">home</a>
    <a class="button button-primary">tech</a>
    <a class="button button-primary">travel</a>
    <a class="button button-primary">ramblings</a>
</div>
</div>
<script>
  var bannerMap = { 1: {
    greeting: 'Hiya!',
    description: 'Taken while I met him at one of those upscale restaurants in New York. <br/> Just Kidding! <br/> Wax statue of Will Smith at Madame Tussauds, Bangkok. <br/> Don\'t forget to read more of my travel stories!',
    darkText: false
  },
  2: {
    greeting: 'Sawasdee!',
    description: '<br/><br/><br/>',
    darkText: true
  },
  3: {
    greeting: 'Vanakkam!',
    description: '<span style="color:white">Hungry yet?<br/> A pic from my half finished meal at Khao san area, Bangkok. <br/> Don\'t forget to read more of my travel stories!<span>',
    darkText: false
  },
  4: {
    greeting: 'Hola!',
    description: '<span style="color:white">Thean Hou temple, Kuala Lumpur</span>',
    darkText: false
  },
  5: {
    greeting: 'Hello!',
    description: 'Sanam Chandra palace, Nakhon Pathom',
    darkText: false
  }};
  var bannerNo = Math.ceil(Math.random() * 5);
  document.getElementById("banner_main").className += ' banner_' + bannerNo;
  var bannerData = bannerMap[bannerNo];
  document.getElementById("greeting_text").innerHTML = bannerData.greeting;
  document.getElementById("description_text").innerHTML = bannerData.description;
  if(bannerData.darkText) {
      document.getElementById("greeting_text").className += ' dark-text';
      document.getElementById("description_text").className += ' dark-text';
  }
</script>